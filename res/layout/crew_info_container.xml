<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.nasa.apps.spotthestation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity" >
    
    <com.viewpagerindicator.TitlePageIndicator
        android:layout_alignParentTop="true"
        android:padding="10dip"
        android:textColor="?android:attr/textColorSecondary"
        app:selectedColor="@android:color/holo_blue_dark"
        app:footerColor="@android:color/holo_blue_dark"
        android:id="@+id/pager_indicator"
        app:fades="false"             
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        />

     <android.support.v4.view.ViewPager		
        android:id="@+id/pager"
        android:layout_below="@+id/pager_indicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</RelativeLayout>