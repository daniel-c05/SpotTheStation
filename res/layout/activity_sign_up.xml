<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.nasa.apps.spotthestation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity" >
    
    <com.viewpagerindicator.UnderlinePageIndicator
        android:layout_alignParentTop="true"
        android:id="@+id/register_pager_indicator"
        app:fades="false"
		app:selectedColor="@android:color/holo_blue_dark"             
        android:layout_height="4dp"
        android:layout_width="fill_parent"
        />

     <android.support.v4.view.ViewPager		
        android:id="@+id/register_pager"
        android:layout_below="@+id/register_pager_indicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
     
      <include
     layout="@layout/two_button_bar" 
     />

</RelativeLayout>